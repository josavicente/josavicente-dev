---

import { SITE } from '../setup.mjs';
import Layout from '../layouts/PageLayout.astro';
import Presentation from '../components/widgets/Presentation.astro';
import { getCanonical, getHomePermalink } from '../utils/permalinks.js';
import HighlightedPosts from '../components/blog/HighlightedPosts.astro';
import Steps from '../components/widgets/Steps.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};

---


<Layout {meta}>
	<Presentation />
	<HighlightedPosts />
	<Steps />
</Layout>
