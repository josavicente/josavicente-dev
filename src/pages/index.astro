---
import { SITE } from '../config.mjs';
import Layout from '../layouts/PageLayout.astro';
import Presentation from '../components/widgets/Presentation.astro';
import { getCanonical, getHomePermalink } from '../utils/permalinks.js';
import HighlightedPosts from '../components/blog/HighlightedPosts.astro';
import Experience from '../components/widgets/Experience.astro';
import Aboutme from '../components/widgets/Aboutme.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
